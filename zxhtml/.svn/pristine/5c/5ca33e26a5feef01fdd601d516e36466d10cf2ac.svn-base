*{
    margin:0;
    padding:0;
    list-style: none;
    box-sizing: border-box;
}
body {
    background: #f6f6f6;
    position: relative;
    box-sizing: border-box;
}

header {
    width: 100%;
    height: auto;
    background: #fff;
    border-bottom: 1px solid #ccc;
}
header>.header>a{
    text-decoration: none;
}
.register {
    width: 1200px;
    height: auto;
    margin: 30px auto;
    box-sizing: border-box;
    padding-top: 65px;
    text-align: center;
    background: #fff;
}

.register > .register_header {
    width: 100%;
    height: 57px;
    font-size: 24px;
    color: #000;
    font-weight: bold;
    border-bottom: 1px solid #ccc;
}

.register > .form-horizontal {
    width: 596px;
    margin: 82px auto;
    padding: 0;
}

.register > .form-horizontal > .form-group {
    line-height: 50px;
    margin-top: 30px;
}

.register > .form-horizontal > .form-group .checkbox {
    width: 500px;
}

.register > .form-horizontal > .form-group .checkbox > label {
    display: flex;
    align-items: center;
}

.register > .form-horizontal > .form-group .checkbox > label > span {
    color: #e42513;
}

.register > .form-horizontal > .form-group .checkbox > label > [type=checkbox] {
    width: 15px;
    height: 15px;
    border-radius: 0;
    border: 1px solid #ccc;
    background: #fff;
}

.register > .form-horizontal > .form-group .form-control {
    height: 50px;
    border: 1px solid #ccc;
    border-radius: 6px;
    box-shadow: 0 0 10px 1px rgba(0, 0, 0, 0.1);
    padding-left: 30px;
}

.register > .form-horizontal > .form-group [type=submit] {
    width: 300px;
    height: 50px;
    border-radius: 6px;
    background: #e32613;
    outline: none;
    border: none;
    margin-bottom: 84px;
    color: #fff;
    box-shadow: 0 0 10px 1px rgba(0, 0, 0, 0.2);
    transition: all 0.3s ease;
}
.register > .form-horizontal > .form-group [type=submit]:hover{
    background: #c70010;
}
.register > .form-horizontal > .form-group .span {
    height: 50px;
    border-radius: 6px;
    background: #e70014;
    margin-left: 22px;
    color: #fff;
    font-size: 14px;
    box-shadow: 0 0 10px 1px rgba(0, 0, 0, 0.1);
    cursor: pointer;
    display:none;
}
.register > .form-horizontal > .form-group i{
    font-style: normal;
}
.register > .form-horizontal > .form-group .span.active{
    display: block;
}
.register_ok{
    width:100%;
    height:calc(100% - 80px - 280px);
    background: rgba(0,0,0,0.4);
    position: absolute;
    top:80px;
    left:0;
    justify-content: center;
    align-items: center;
    transition: all 0.3s ease;
    display: none;
}
.register_ok.active{
    display: flex;
}
.register_ok>.box{
    width:680px;
    height:510px;
    border-radius: 10px;
    background: #fff;
    position: relative;
}
.register_ok>.box>img{
    display: block;
    width:178px;
    height:178px;
    position: absolute;
    left:0;
    right:0;
    margin:auto;
    top:95px;
}
.register_ok>.box>p{
    text-align: center;
    font-size:22px;
    color: #000;
    margin-top:350px;
}
.register_ok>.box>.time{
    text-align: center;
    margin-top:30px;
    font-size:12px;
    color: #000;
    font-weight: 700;
}
.register_ok>.box>.time>a{
    color: #e60013;
    text-decoration: none;
}