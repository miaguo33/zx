/*杏仁*/
.wrapper-content{
    padding:30px 0;
}
#page-wrapper .content{
    height:820px;
    background: white;
    padding:60px;
    margin-bottom: 30px;
    position: relative;
    box-shadow: 0 0 5px 3px rgba(0,0,0,0.1);
}
#page-wrapper .content>ul{
    height:auto;
    display: flex;
    align-items: center;
    border-bottom: 1px solid #ededed;
    padding:0;
}
#page-wrapper .content>.xuanzhe{
    width:100%;
    height:100%;
    display: none;
    overflow: hidden;
}
#page-wrapper .content>.xuanzhe.active{
    display: block;
}
#page-wrapper .content>ul>li{
    font-size:18px;
    color: #333;
    height:54px;
    margin-right: 95px;
    cursor: pointer;
}
#page-wrapper .content>ul>li.active{
    font-weight: bold;
    font-size:18px;
    border-bottom: 4px solid #e50014;
}
#page-wrapper .content>.xuanzhe>.money{
    margin-top: 80px;
    height:38px;
    display: flex;
    align-items: flex-end;
    padding:0;

}
#page-wrapper .content>.xuanzhe>.money>img{
    display: block;
}
#page-wrapper .content>.xuanzhe>.money>span:nth-of-type(1){
    margin-left: 10px;
    font-size:12px;
    color: #333;
}
#page-wrapper .content>.xuanzhe>.money>span:nth-of-type(2){
    color: #e60013;
    font-size:40px;
    margin-left: 36px;
    line-height: 15px;
}
#page-wrapper .content>.xuanzhe>.money>span:nth-of-type(2)>i{
    font-style: normal;
    font-size:18px;
    font-weight: bold;
}
#page-wrapper .content>.xuanzhe>.money>img:nth-of-type(1){
    width:26px;
    height:26px;
    background: url("../img/lba-qian1.png") no-repeat;
    background-position: center;
}
#page-wrapper .content>.xuanzhe>.money>img:nth-of-type(2){
    width:18px;
    height:18px;
    background: url("../img/lbs-qian.png") no-repeat;
    background-position: center center;
    background-size:100%;
    margin-left: 20px;
}
#page-wrapper .content>.xuanzhe>span{
    display: block;
    width:316px;
    height:22px;
    color: #333;
    font-size:20px;
    font-weight: bold;
    position: absolute;
    top:376px;
    left:0;
    right:0;
    margin:auto;
}
#page-wrapper .content>.xuanzhe>.img{
    width:205px;
    height:287px;
    position: absolute;
    left:0;
    right:0;
    top:440px;
    margin:auto;
    background: url("../img/lbs-rujia.png") no-repeat;
    background-size:cover;
    background-position: center center;
}

#page-wrapper .content>.xuanzhe>ol{
    height:auto;
    padding: 0;
}
#page-wrapper .content>.xuanzhe>ol>li{
    width:100%;
    height:80px;
    line-height: 80px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding:0 40px;
}
#page-wrapper .content>.xuanzhe>ol>li:last-child{
    border-bottom: 1px solid #f6f6f6;
}
#page-wrapper .content>.xuanzhe>ol>li:nth-of-type(2n-1){
    background: #f6f6f6;
}
#page-wrapper .content>.xuanzhe>ol>li>span{
    font-size:12px;
    color: #333;
}
::-webkit-scrollbar{
    display: none;
}




